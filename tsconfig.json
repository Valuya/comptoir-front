{
    "version": "1.6.0",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "files": [
        "./app/app.ts"
    ],
    "filesGlob": [
        "./comptoir-front/**/*.ts",
        "./gulpfile.ts",
        "./tools/**/*.ts"
    ],
    "compileOnSave": false
}
